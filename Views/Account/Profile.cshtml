@model AygazSmartEnergy.Models.ApplicationUser
@{
    ViewData["Title"] = "Profil";
}

<div class="container mt-3">
    <h3 class="mb-3"><i class="fas fa-user-cog me-2"></i>Profil</h3>
    @if (Model == null)
    {
        <div class="alert alert-warning">
            Profil bilgilerine erişilemiyor. Lütfen giriş yapın.
        </div>
    }
    else
    {
        <div class="row g-3">
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="avatar bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width:96px;height:96px;">
                            @{
                                var avatarInitial = !string.IsNullOrWhiteSpace(Model.FirstName)
                                    ? char.ToUpper(Model.FirstName[0])
                                    : 'K';
                            }
                            <span class="fs-1">@avatarInitial</span>
                        </div>
                        <h4 class="card-title mb-1">@Model.FirstName @Model.LastName</h4>
                        <p class="text-muted mb-2">@Model.Email</p>
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                            @(Model.IsActive ? "Aktif" : "Pasif")
                        </span>
                    </div>
                    <div class="card-footer bg-light text-center">
                        <small class="text-muted d-block">Son giriş: @(Model.LastLoginAt?.ToString("g") ?? "Henüz giriş yapılmadı")</small>
                        <small class="text-muted d-block">Kayıt tarihi: @Model.CreatedAt.ToString("d")</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Kişisel Bilgiler</h5>
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Ad</dt>
                            <dd class="col-sm-8">@Model.FirstName</dd>

                            <dt class="col-sm-4">Soyad</dt>
                            <dd class="col-sm-8">@Model.LastName</dd>

                            <dt class="col-sm-4">E-posta</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4">Telefon</dt>
                            <dd class="col-sm-8">@Model.PhoneNumber ?? "-"</dd>

                            <dt class="col-sm-4">Adres</dt>
                            <dd class="col-sm-8">@(!string.IsNullOrWhiteSpace(Model.Address) ? Model.Address : "Adres tanımlı değil")</dd>
                        </dl>
                    </div>
                    <div class="card-footer bg-light text-end">
                        <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Settings">
                            <i class="fas fa-pen me-2"></i>Bilgileri Güncelle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


