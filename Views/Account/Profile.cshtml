@model AygazSmartEnergy.Models.ApplicationUser
@{
    ViewData["Title"] = "Profil";
}

<div class="container mt-3">
    <h3 class="mb-3"><i class="fas fa-user-cog me-2"></i>Profil</h3>
    <div class="card">
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">Ad</div>
                <div class="col-md-9">@Model.FirstName</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">Soyad</div>
                <div class="col-md-9">@Model.LastName</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">E-posta</div>
                <div class="col-md-9">@Model.Email</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">Adres</div>
                <div class="col-md-9">@Model.Address</div>
            </div>
            <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Settings"><i class="fas fa-cog me-2"></i>Ayarlar</a>
        </div>
    </div>
</div>


