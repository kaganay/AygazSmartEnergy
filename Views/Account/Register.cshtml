@model AygazSmartEnergy.Models.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container py-4" style="max-width: 620px;">
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <h2 class="mb-3 text-center"><i class="fas fa-user-plus me-2"></i>Yeni Hesap Oluştur</h2>
            <p class="text-muted text-center">Akıllı enerji çözümlerinden yararlanmak için hesabınızı oluşturun.</p>

            <form asp-action="Register" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 mt-1">
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-3">
                    <label asp-for="Address" class="form-label"></label>
                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="row g-3 mt-1">
                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="Password" class="form-control" />
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-success w-100 mt-4 mb-3">
                    <i class="fas fa-user-plus me-2"></i>Hesap Oluştur
                </button>
            </form>

            <div class="text-center">
                <span class="text-muted">Zaten bir hesabınız var mı?</span>
                <a asp-action="Login" class="fw-semibold">Giriş yapın</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

