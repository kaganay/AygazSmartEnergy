@{
    ViewData["Title"] = "Ayarlar";
}

<div class="container mt-3">
    <h3 class="mb-3"><i class="fas fa-cog me-2"></i>Ayarlar</h3>
    <div class="card">
        <div class="card-body">
            <p>Hesap ve uygulama ayarları için temel sayfa.</p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>Gaz eşiği (MQ-2)</span>
                    <span class="text-muted">appsettings.json &gt; GasSettings:Mq2Threshold</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>Otomatik fan</span>
                    <span class="text-muted">appsettings.json &gt; GasSettings:AutoFanEnabled</span>
                </li>
            </ul>
        </div>
    </div>
</div>


