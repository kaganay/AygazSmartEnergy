@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aygaz Smart Energy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
</head>
<body>
    @{
        var isSignedIn = SignInManager.IsSignedIn(User);
        ApplicationUser? currentUser = null;
        if (isSignedIn)
        {
            currentUser = await UserManager.GetUserAsync(User);
        }
    }
    <header>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="fas fa-bolt me-2"></i>Aygaz Smart Energy
        </a>

        <!-- Hamburger Button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Menüyü Aç/Kapat">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Menü Kısmı -->
        <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                        <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Dashboard" asp-action="Devices">
                        <i class="fas fa-microchip me-1"></i>Cihazlar
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Dashboard" asp-action="Alerts">
                        <i class="fas fa-bell me-1"></i>Uyarılar
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="analyticsDropdown" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-chart-line me-1"></i>Analiz
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="analyticsDropdown">
                        <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Devices"><i class="fas fa-chart-area me-2"></i>Enerji Analizi (Cihaz Seç)</a></li>
                        <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Index" asp-fragment="surdurulebilirlik"><i class="fas fa-leaf me-2"></i>Karbon Ayak İzi</a></li>
                        <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="BillPrediction"><i class="fas fa-lira-sign me-2"></i>Maliyet Analizi</a></li>
                        <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="BillPrediction" asp-fragment="tasarruf"><i class="fas fa-lightbulb me-2"></i>Tasarruf Önerileri</a></li>
                    </ul>
                </li>
            </ul>

            <!-- Sağ Taraf (Kullanıcı Menüsü) -->
            <ul class="navbar-nav align-items-center">
                <li class="nav-item d-flex align-items-center me-3">
                    <span class="me-2"><i class="fas fa-fire-extinguisher me-1"></i>Gaz:</span>
                    <span id="gasLevelBadge" class="badge bg-secondary">-</span>
                </li>
                @if (isSignedIn)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i>@(string.IsNullOrWhiteSpace(currentUser?.FirstName) ? "Hesabım" : currentUser!.FirstName)
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="fas fa-user-cog me-2"></i>Profil</a></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Settings"><i class="fas fa-cog me-2"></i>Ayarlar</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-link dropdown-item px-0">
                                        <i class="fas fa-sign-out-alt me-2"></i>Çıkış
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">
                            <i class="fas fa-sign-in-alt me-1"></i>Giriş Yap
                        </a>
                    </li>
                    <li class="nav-item ms-lg-2 mt-2 mt-lg-0">
                        <a class="btn btn-sm btn-success" asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus me-1"></i>Kayıt Ol
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2024 - Aygaz Smart Energy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
                </div>
                <div class="col-md-6 text-end">
                    <span class="badge bg-success" id="connectionStatus">
                        <i class="fas fa-circle me-1"></i>Bağlı
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // SignalR bağlantı durumu
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/energyHub")
            .build();

        connection.start().then(function () {
            console.log("SignalR bağlantısı kuruldu");
            document.getElementById('connectionStatus').innerHTML = '<i class="fas fa-circle me-1"></i>Bağlı';
            document.getElementById('connectionStatus').className = 'badge bg-success';
        }).catch(function (err) {
            console.error("SignalR bağlantı hatası:", err);
            document.getElementById('connectionStatus').innerHTML = '<i class="fas fa-circle me-1"></i>Bağlantı Yok';
            document.getElementById('connectionStatus').className = 'badge bg-danger';
        });

        // DataTables otomatik başlatma
        $(document).ready(function() {
            $('.table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json"
                },
                "pageLength": 25,
                "responsive": true
            });

            // Latest gas level
            fetch('/api/IoT/sensor-data/latest?count=1')
                .then(r => r.json())
                .then(d => {
                    if (d && d.success && d.data && d.data.length > 0) {
                        const gas = d.data[0].gasLevel ?? '-';
                        setGasBadge(gas);
                    }
                }).catch(() => {});

            // SignalR ile sensör verilerini dinle (navbar için)
            connection.on("ReceiveSensorData", (sensorData) => {
                if (sensorData.gasLevel !== undefined) {
                    setGasBadge(sensorData.gasLevel);
                }
            });
        });

        function setGasBadge(value) {
            const badge = document.getElementById('gasLevelBadge');
            if (!badge) return;
            const num = Number(value);
            badge.textContent = isNaN(num) ? '-' : (num.toFixed(0) + '%');
            badge.className = 'badge ' + (isNaN(num) ? 'bg-secondary' : (num >= 40 ? 'bg-danger' : 'bg-success'));
        });
    </script>
</body>
</html>